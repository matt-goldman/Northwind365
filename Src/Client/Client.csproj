<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Northwind365.Client</PackageId>
    <Authors>Matt Goldman</Authors>
    <Company>SSW</Company>
    <Product>Northwind365</Product>
    <Description>Client package class library for consuming the Northwind365 API in C# client applications</Description>
    <Copyright>2021 SSW</Copyright>
    <PackageProjectUrl>https://northwind365.com/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/matt-goldman/Northwind365</RepositoryUrl>
    <PackageIcon>SSW_Logo.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="./SSW_Logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
